<div class="form-container">
    <div class="form">
      <%= @album.album_name %>
      <%= @album.id %>
        <%= form_for(@post, url: user_posts_path) do |f| %>
          <div class="picture">
            <%= f.file_field :picture, name:"post[picture][]", multiple: true, accept: 'image/jpeg,image/gif,image/png', required: true %>
          </div>
          <%= f.submit "Post", class: "btn btn-primary" %>
        <% end %>
    </div>
</div>

<script type="text/javascript">
  $('#post_picture').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 3) {
      alert('Maximum file size is 3MB. Please choose a smaller file.');
    }
  });
</script>