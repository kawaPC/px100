<%= link_to user_album_path(user, album) do %>
<div class="text-box">
    <div class="text">
        <%= album.album_name %>
    </div>
</div>
<div class="cover-box">
        <div class="cover">
            <% if album.cover_picture.url %>
                <%= image_tag album.cover_picture.url %>
            <% else %>
                <%= image_tag "default_picture.jpg" %>
            <% end %>
        </div>
</div>
<% end %>